<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <Label text="Game Registration" />
    <TextField fx:id="gameNameField" promptText="Game Name" />
    <TextField fx:id="gameTypeField" promptText="Game Type" />
    <TextField fx:id="boardNumberField" promptText="Board Number" />
    <TextField fx:id="maxPlayersField" promptText="Max Players" />
    <Button text="Register Game" onAction="#registerGame" />
</VBox>
